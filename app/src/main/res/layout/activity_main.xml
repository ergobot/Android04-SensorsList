<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sensorslist.MainActivity">

    <RelativeLayout
        android:id="@+id/lightsensorlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:paddingLeft="4dp">

        <TextView
            android:id="@+id/lightname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Name: Light Sensor"
            tools:text="Light Sensor"
            android:gravity="top|left"/>
        <TextView
            android:id="@+id/lightdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Desc: Measure light"
            tools:text="Measure the amount of light"
            android:gravity="top|left"
            android:paddingTop="0dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/lightname"
            />
        <TextView
            android:id="@+id/lightvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="Value: "
            android:gravity="top|left"
            android:paddingTop="0dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/lightdescription"
            />
    </RelativeLayout>




</RelativeLayout>
